button class=\"btn\" @click=\"$emit('delete-note', note.id)\">\r\n            <i class=\"bi bi-trash\"></i>\r\n          </button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </li>\r\n</template>\r\n\r\n<script>\r\n\r\nexport default {\r\n  name: 'NoteView',\r\n  props: {\r\n    note: Object,\r\n  },\r\n  data() {\r\n    return {\r\n      editing_mode: false,\r\n    }\r\n  },\r\n  methods: {\r\n    editContents() {\r\n      this.editing_mode = true;\r\n      this.$refs[\"note-content\"].setAttribute(\"contenteditable\", \"true\");\r\n    },\r\n    saveContents() {\r\n      this.editing_mode = false;\r\n      this.$refs[\"note-content\"].setAttribute(\"contenteditable\", \"false\");\r\n      this.$emit(\"update-note\", this.note.id, this.$refs[\"note-content\"].innerHTML);\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style>\r\n#time {\r\n  flex-grow: 0;\r\n  border-right: 2px solid #4F4F4F;\r\n  padding-right: 1rem;\r\n}\r\n#content {\r\n  flex-grow: 1;\r\n  padding-left: 1rem;\r\n}\r\n#button-bar {\r\n  flex-grow: 0;\r\n}\r\n\r\n.editable {\r\n  border: 1px solid #4F4F4F;\r\n}\r\n</style>\r\n  "]},"metadata":{},"sourceType":"module","externalDependencies":[]}